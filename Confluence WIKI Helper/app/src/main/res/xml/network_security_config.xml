<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow cleartext traffic for specific IP addresses or domains -->
        <domain includeSubdomains="false">123.60.144.244</domain>
        <!-- Add other domains/IPs as needed -->
        <domain includeSubdomains="true">dify.ai</domain>
        <domain includeSubdomains="true">api.dify.ai</domain>
        <!-- Allow localhost for development -->
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
        <domain includeSubdomains="false">10.0.2.2</domain>
    </domain-config>
    
    <!-- Default security for other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
